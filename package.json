{
  "name": "typescript-server-cli",
  "version": "1.0.0",
  "description": "TypeScript Express server with CLI client",
  "main": "dist/server/index.js",
  "scripts": {
    "setup": "ts-node setup.ts",
    "build": "tsc",
    "build:server": "tsc --project src/server",
    "build:client": "tsc --project src/client",
    "dev:server": "ts-node src/server/index.ts",
    "dev:client": "ts-node src/client/index.ts",
    "start:server": "node dist/server/index.js",
    "start:client": "node dist/client/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typescript",
    "express",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.12.0",
    "@coinbase/x402": "^0.3.8",
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "readline": "^1.3.0",
    "viem": "^2.30.6",
    "x402-axios": "^0.3.3",
    "x402-express": "^0.3.4"
  }
}
